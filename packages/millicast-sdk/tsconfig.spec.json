{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "allowJs": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/**/*.steps.ts",
    "global.d.ts"
  ]
}
