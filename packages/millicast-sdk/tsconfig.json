{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": false,
  },
  "include": ["./src/**/*.ts", "integration-tests/**/*.ts"],
  "exclude": ["./node_modules/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  }
}
